extends base.pug

block content
  div.row
    div.col.s6.offset-s3
      div.row
        div.col.s12.m12.l12
          form(method="POST")
            div.class.card
              div.card-image
                img(src="/anubis.jpg")
                span(class="card-title") Anubis | Система управления фрилансом
              div.card-content
                p Anubis - сервис компании "СД" Для управления проектами, отданными на фриланс. Для входа введите логин и пароль
                p
                  div.row
                    div.input-field.col.s12.m12.l12
                      input.validate(id="login", name="login", type="text")
                      label(for="login") Имя пользователя
                    div.input-field.col.s12.m12.l12
                      input.validate(id="password", name="password", type="password")
                      label(for="password") Пароль
              div.card-action
                button.btn.btn-flat.waves-effect.waves-light(type="submit", name="login") Войти
                a.btn.btn-flat.waves-effect.waves-light(href="https://www.sdvor.com/auth/register/") Регистрация